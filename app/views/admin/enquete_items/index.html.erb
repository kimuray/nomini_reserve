<% content_for :content_header do %>
  <h1>アンケート項目一覧</h1>
  <h2><%= link_to '新しくアンケート項目を登録する', new_admin_enquete_item_path, class: 'btn btn-primary' %></h2>
<% end %>
<!-- Main content -->
<div class="col-xs-12">

  <div class="box box-primary">
    <div class="box-body table-responsive no-padding">
      <table class="table table-striped">
        <tr>
          <th class="col-md-1"><%= EnqueteItem.human_attribute_name(:id) %></th>
          <th class="col-md-3"><%= EnqueteItem.human_attribute_name(:content) %></th>
          <th class="col-md-3"><%= EnqueteItem.human_attribute_name(:answer_type) %></th>
          <th class="col-md-3"></th>
        </tr>
          <% if @enquete_items.any? %>
            <% @enquete_items.each do |enquete_item| %>
            <tr>
              <td><%= enquete_item.id %></td>
              <td><%= enquete_item.content %></td>
              <td><%= enquete_item.answer_type %></td>
              <td>
                <div class="text-right">
                <%= link_to admin_enquete_item_path(reservation_category), class: 'btn btn-default' do %><i class="fa fa-search"></i> 詳細<% end %>
                <%= link_to edit_admin_enquete_item_path(reservation_category), class: 'btn btn-info' do %><i class="fa fa-edit"></i> 編集<% end %>
                <%= link_to admin_enquete_item_path(reservation_category), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } do %>
                  <i class="fa fa-trash-o"></i> 削除
                <% end %>
                </div>
              </td>
            </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan=5>登録されている店舗が存在しません</td>
            </tr>
          <% end %>
      </table>
    </div>
    <div class="box-footer clearfix">
     <%= paginate @enquete_items, theme: :admin %>
    </div>
  </div>
</div>
