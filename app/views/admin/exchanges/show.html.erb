<% content_for :content_header do %>
  <h1>換金申請詳細</h1>
<% end %>
<!-- Main content -->
<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:id) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.id %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:status) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.status %>
      <% if @exchange.pending? %>
        <%= link_to done_admin_exchange_path(@exchange), class: 'btn btn-success', method: :patch, data: { confirm: '承認してよろしいですか？' } do %>
          <i class="fa fa-edit">完了</i>
        <% end %>
        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#remand_form"><i class="fa fa-edit">差戻し</i></a>
        <%= render 'remand_modal_form', exchange: @exchange %>
      <% end %>
      <% if @exchange.remand_reason.present? %>
        <h4><%= Exchange.human_attribute_name(:remand_reason) %></h4>
        <%= simple_format(@exchange.remand_reason) %>
      <% end %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:user_name) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.user&.full_name_kana %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:point) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.point %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:paied_at) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.paied_at %>
    </div>


    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:created_at) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.created_at %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Exchange.human_attribute_name(:updated_at) %></h3>
    </div>
    <div class="box-body">
      <%= @exchange.updated_at %>
    </div>

    <!-- /.box-body -->
    <div class="box-footer">
      <%= link_to edit_admin_exchange_path(@exchange), class: 'btn btn-info' do %>
        <i class="fa fa-edit">編集</i>
      <% end %>
      <%= link_to admin_exchange_path(@exchange), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } do %>
        <i class="fa fa-trash-o">削除</i>
      <% end %>
    </div>
    <!-- /.box-footer-->
  </div>
</div>

