<% content_for :content_header do %>
  <h1>支払い情報一覧</h1>
  <h2><%= link_to '支払い情報を登録する', new_admin_payment_path, class: 'btn btn-primary' %></h2>
<% end %>
<!-- Main content -->
<div class="col-xs-12">

  <div class="box box-primary">
    <div class="box-body table-responsive no-padding">
      <table class="table table-striped">
        <tr>
          <th class="col-md-1"><%= Payment.human_attribute_name(:id) %></th>
          <th class="col-md-3"><%= Payment.human_attribute_name(:status) %></th>
          <th class="col-md-3"><%= Payment.human_attribute_name(:payjp_token) %></th>
          <th class="col-md-2"><%= Payment.human_attribute_name(:subscription_id) %></th>
          <th class="col-md-3"></th>
        </tr>
          <% if @payments.any? %>
            <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.id %></td>
              <td><%= payment.status_i18n %></td>
              <td><%= payment.payjp_token %></td>
              <td><%= payment.subscription_id %></td>
              <td>
                <div class="text-right">
                <%= link_to admin_payment_path(payment), class: 'btn btn-default' do %><i class="fa fa-search"></i> 詳細<% end %>
                <%= link_to edit_admin_payment_path(payment), class: 'btn btn-info' do %><i class="fa fa-edit"></i> 編集<% end %>
                <%= link_to admin_payment_path(payment), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } do %>
                  <i class="fa fa-trash-o"></i> 削除
                <% end %>
                </div>
              </td>
            </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan=5>登録されている支払い情報が存在しません</td>
            </tr>
          <% end %>
      </table>
    </div>
    <div class="box-footer clearfix">
     <%= paginate @payments, theme: :admin %>
    </div>
  </div>
</div>
