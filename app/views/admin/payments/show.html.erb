<% content_for :content_header do %>
  <h1>支払い情報詳細</h1>
<% end %>
<!-- Main content -->
<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:id) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.id %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:status) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.status %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:token_id) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.token_id %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:customer_id) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.customer_id %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:subscription_id) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.subscription_id %>
    </div>

    
    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:created_at) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.created_at %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Payment.human_attribute_name(:updated_at) %></h3>
    </div>
    <div class="box-body">
      <%= @payment.updated_at %>
    </div>

    <!-- /.box-body -->
    <div class="box-footer">
      <%= link_to edit_admin_payment_path(@payment), class: 'btn btn-info' do %>
        <i class="fa fa-edit">編集</i>
      <% end %>
      <%= link_to admin_payment_path(@payment), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } do %>
        <i class="fa fa-trash-o">削除</i>
      <% end %>
    </div>
    <!-- /.box-footer-->
  </div>
</div>

