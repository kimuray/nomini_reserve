<% content_for :content_header do %>
  <h1>予約カテゴリ詳細</h1>
<% end %>
<!-- Main content -->
<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><%= ReservationCategory.human_attribute_name(:id) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation_category.id %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= ReservationCategory.human_attribute_name(:name) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation_category.name %>
    </div>

    <!-- /.box-body -->
    <div class="box-footer">
      <%= link_to edit_admin_reservation_category_path(@reservation_category), class: 'btn btn-info' do %>
        <i class="fa fa-edit">編集</i>
      <% end %>
      <%= link_to admin_reservation_category_path(@reservation_category), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } do %>
        <i class="fa fa-trash-o">削除</i>
      <% end %>
    </div>
    <!-- /.box-footer-->
  </div>
</div>
