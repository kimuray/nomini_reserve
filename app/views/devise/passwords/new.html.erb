<div class="main-area container bg-white mt-3">
  <h2 class="text-info text-center page-heading mb-4 mt-4">パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group text-center login-form">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
    </div>

    <div class="actions form-group text-center">
      <%= f.submit "パスワードのリセットメールを送信する", class: "btn btn-info" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
