<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
<h2 class="text-info text-center mb-4">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group row">
    <%= f.label :email, class: "col-sm-2" %><br />
    <%= f.email_field :email, autofocus: true, class: "col-sm-8" %>
  </div>
  <% if f.object.password_required? %>
    <div class="field form-group row">
      <%= f.label :password, class: "col-sm-2" %>
      <%= f.password_field :password, autocomplete: "off", class: "col-sm-8" %>
      <% if @minimum_password_length %>
      <em class="col-sm-2">※ <%= @minimum_password_length %> 文字以上</em>
      <% end %><br />
    </div>

    <div class="field form-group row">
      <%= f.label :password_confirmation, class: "col-sm-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-8" %>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= f.label :l_name, class: "col-sm-2" %><br />
    <%= f.text_field :l_name, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :f_name, class: "col-sm-2" %><br />
    <%= f.text_field :f_name, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :l_name_kana, class: "col-sm-2" %><br />
    <%= f.text_field :l_name_kana, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :f_name_kana, class: "col-sm-2" %><br />
    <%= f.text_field :f_name_kana, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :enterprise_name, class: "col-sm-2" %><br />
    <%= f.text_field :enterprise_name, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :phone_number, class: "col-sm-2" %><br />
    <%= f.text_field :phone_number, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :bank_name, class: "col-sm-2" %><br />
    <%= f.text_field :bank_name, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :bank_branch_name, class: "col-sm-2" %><br />
    <%= f.text_field :bank_branch_name, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :bank_account_number, class: "col-sm-2" %><br />
    <%= f.text_field :bank_account_number, class: "col-sm-8" %>
  </div>

  <div class="field form-group row">
    <%= f.label :occupation, class: "col-sm-2" %><br />
    <%= f.text_field :occupation, class: "col-sm-8" %>
  </div>

  <div class="actions text-center mb-3">
    <%= f.submit "登録する", class: "btn btn-info" %>
  </div>
<% end %>
<div class="text-center account-sub p-3">
  <%= render "devise/shared/links" %>
</div>
