<div class="main-area container bg-white mt-3">
  <h2 class="text-info text-center page-heading mb-4 mt-4">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group row center-form">
      <%= f.label :email, class: "col-sm-4 signup-label m-0" %><br />
      <%= f.email_field :email, autofocus: true, class: "col-sm-8 form-control" %>
    </div>
    <% if f.object.password_required? %>
      <div class="field form-group row center-form">
        <%= f.label :password, class: "col-sm-4 signup-label" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length}文字以上", class: "col-sm-8 form-control" %>
      </div>

      <div class="field form-group row center-form">
        <%= f.label :password_confirmation, class: "col-sm-4 signup-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length}文字以上", class: "col-sm-8 form-control" %>
      </div>
    <% end %>

    <div class="field form-group row center-form">
      <%= f.label "フルネーム(全角カナ)", class: "col-sm-4 signup-label" %><br />
      <%= f.text_field :l_name_kana, placeholder: "セイ", class: "col-sm-4 form-control" %>
      <%= f.text_field :f_name_kana, placeholder: "メイ", class: "col-sm-4 form-control" %>
    </div>

    <div class="field form-group row center-form">
      <%= f.label :phone_number, class: "col-sm-4 signup-label" %><br />
      <%= f.text_field :phone_number, class: "col-sm-8 form-control" %>
    </div>

    <div class="actions text-center mb-3">
      <%= f.submit "登録する", class: "btn btn-info" %>
    </div>
  <% end %>
  <div class="text-center account-sub p-4">
    <% unless session[:sns_flg] %>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn facebook-login-button mb-3" do %>
            <i class="fa fa-facebook"></i>Facebookで会員登録
          <% end -%>
          <br />
        <% end -%>
      <% end -%>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
