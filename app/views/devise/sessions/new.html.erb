<h2 class="text-info text-center page-heading mb-4 mt-1">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group text-center">
    <%= f.email_field :email, autofocus: true, placeholder: t("activerecord.attributes.user.email"), class: "login-form" %>
  </div>

  <div class="field form-group text-center">
    <%= f.password_field :password, autocomplete: "off", placeholder: t("activerecord.attributes.user.password"), class: "login-form" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions form-group text-center">
    <%= f.submit "ログイン", class: "btn btn-info" %>
  </div>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center"><%= link_to "新規会員登録はこちら", new_registration_path(resource_name) %></p>
<% end -%>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center"><%= link_to "パスワードを忘れた場合はこちら", new_password_path(resource_name) %></p>
<% end -%>

<div class="text-center account-sub p-4">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn facebook-login-button mb-3" do %>
        <i class="fa fa-facebook"></i>Facebookアカウントでログイン
      <% end -%>
      <br />
    <% end -%>
  <% end -%>
  <%= render "devise/shared/links" %>
</div>
