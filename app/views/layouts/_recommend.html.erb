<h2 class="text-info page-heading py-3 m-0">PickUp</h2>
<div class="card-deck">
  <% recommend_shops.each do |recommend_shop| %>
    <div class="card">
      <div class="card-body recommend-shop-name"><%= recommend_shop.name %></div>
      <%= image_tag recommend_shop.image, class: "card-img-bottom img-responsive", size: '150' %>
    </div>
  <% end %>
</div>
