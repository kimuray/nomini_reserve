<!DOCTYPE html>
<html>
  <head>
    <title>NominiReserve</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="bg-light">
    <header class="nomini-header bg-white">
      <%= render 'layouts/header' %>
    </header>

    <% flash.each do |key, value| %>
      <div class="alert-area container bg-white mt-3">
        <p class="alert alert-<%= key %>"><%= value %></p>
      </div>
    <% end %>
    <% unless @recommend_shop.blank? %>
      <div class="main-area container bg-white mt-3 p-4 px-5 recommend-area">
        <%= render 'layouts/recommend' %>
      </div>
    <% end %>

    <div class="main-area container bg-white mt-3 p-4 px-5">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
