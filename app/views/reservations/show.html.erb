<h1>予約詳細</h1>
<!-- Main content -->
<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:shop) %></h3>
    </div>
    <div class="box-body">
      <%= link_to @reservation.shop&.name, shop_path(@reservation.shop&.id) %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:reservation_category) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation.reservation_category&.name %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title">料金</h3>
    </div>
    <div class="box-body">
      <%= @reservation.category_price %>円
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:people_count) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation.people_count %>人
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:use_datetime) %></h3>
    </div>
    <div class="box-body">
      <%= "#{@reservation.use_date} #{@reservation.use_time}" %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:message) %></h3>
    </div>
    <div class="box-body">
      <%= simple_format(@reservation.message) %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:status) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation.status %>
    </div>

    <div class="box-header with-border">
      <h3 class="box-title"><%= Reservation.human_attribute_name(:created_at) %></h3>
    </div>
    <div class="box-body">
      <%= @reservation.created_at %>
    </div>

  </div>
</div>
